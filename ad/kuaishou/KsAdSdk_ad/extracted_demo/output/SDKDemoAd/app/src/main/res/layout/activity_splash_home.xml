<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".open.feed.FeedHomeActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@android:color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center"
                android:clickable="true"
                android:background="@android:color/white"
                android:text="测试开屏广告"
                android:textSize="17sp"
                android:textColor="#222222"
                android:textStyle="bold"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/ksad_main_left_back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="6dp"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ksad_back_black_icon"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="16sp"
            android:padding="16dp"
            android:clickable="true"
            android:onClick="testSplashNormal"
            android:background="@drawable/ksad_main_item_bg"
            android:text="开屏广告"
            android:textAllCaps="false"
            tools:ignore="OnClick" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/ksad_main_list_divider_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/ksad_main_item_bg"
            android:clickable="true"
            android:onClick="testSplashGoToMain"
            android:text="开屏广告(点击进入首页)"
            android:textAllCaps="false"
            tools:ignore="OnClick" />

        <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#e0e0e0" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="#222222"
          android:textSize="16sp"
          android:padding="16dp"
          android:clickable="true"
          android:onClick="testSplashNormalLandscape"
          android:background="@drawable/ksad_main_item_bg"
          android:text="开屏广告(横屏)"
          android:textAllCaps="false"
          tools:ignore="OnClick" />

        <include layout="@layout/server_bidding_layout"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8f8"/>

    </LinearLayout>

</ScrollView>