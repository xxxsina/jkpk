<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:id="@+id/test_tab_item_share_content_layout"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="12dp"
    android:background="#e0e0e0"
    android:gravity="top|center_horizontal"
    android:orientation="horizontal"
    android:visibility="gone">
    <Button
      android:id="@+id/test_tab_item_share_content_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:layout_margin="20dp"
      android:text="测试分享的视频信息"
      android:textSize="16dp" />

    <ImageView
      android:id="@+id/test_tab_item_share_content_first_frame"
      android:layout_width="120dp"
      android:layout_height="270dp"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:scaleType="centerCrop"/>

     <TextView
       android:id="@+id/test_tab_item_share_content_desc"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginRight="12dp"
       android:layout_toRightOf="@+id/test_tab_item_share_content_first_frame"
       android:text="视频描述" />
  </RelativeLayout>

  <TextView
    android:id="@+id/test_tab_item_content_text_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:text="测试页面"
    android:textColor="@android:color/holo_blue_light"
    android:textSize="18dp" />

</FrameLayout>