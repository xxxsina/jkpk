<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context=".open.contentalliance.entry.TestEntryHomeActivity">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@android:color/white">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="46dp"
      android:gravity="center"
      android:background="@android:color/white"
      android:text="测试内容-入口组件"
      android:textSize="17sp"
      android:textColor="#222222"
      android:textStyle="bold"
      android:textAllCaps="false" />

    <ImageView
      android:id="@+id/ksad_main_left_back_btn"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_marginLeft="6dp"
      android:layout_gravity="center_vertical|left"
      android:src="@drawable/ksad_back_black_icon" />
  </FrameLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#e0e0e0" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="testEntry1"
    android:background="@drawable/ksad_main_item_bg"
    android:text="测试入口组件样式1（小卡竖版双feed）"
    android:textColor="#222222"
    android:textSize="16sp"
    android:padding="16dp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@drawable/ksad_main_list_divider_bg" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="testEntry2"
    android:background="@drawable/ksad_main_item_bg"
    android:text="测试入口组件样式2（小卡竖版多feed）"
    android:textColor="#222222"
    android:textSize="16sp"
    android:padding="16dp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@drawable/ksad_main_list_divider_bg" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="testEntry3"
    android:padding="16dp"
    android:background="@drawable/ksad_main_item_bg"
    android:text="测试入口组件样式3（大卡竖版多feed）"
    android:textColor="#222222"
    android:textSize="16sp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@drawable/ksad_main_list_divider_bg" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="testEntry4"
    android:padding="16dp"
    android:background="@drawable/ksad_main_item_bg"
    android:text="测试入口组件样式4（大卡横版样式）"
    android:textColor="#222222"
    android:textSize="16sp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@drawable/ksad_main_list_divider_bg" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="testEntry5"
    android:padding="16dp"
    android:background="@drawable/ksad_main_item_bg"
    android:text="测试入口组件样式5（大图样式）"
    android:textColor="#222222"
    android:textSize="16sp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#f8f8f8" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="testEntryMixedUseRecyclerView"
    android:padding="16dp"
    android:background="@drawable/ksad_main_item_bg"
    android:text="测试入口组件样式（混合样式）- RecyclerView"
    android:textColor="#222222"
    android:textSize="16sp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="#f8f8f8" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:onClick="testEntryMixedUseListView"
    android:padding="16dp"
    android:background="@drawable/ksad_main_item_bg"
    android:text="测试入口组件样式（混合样式）- ListView"
    android:textColor="#222222"
    android:textSize="16sp" />

  <View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8" />

</LinearLayout>
