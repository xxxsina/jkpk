<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".open.feed.FeedHomeActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@android:color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="testConfigFeedList"
                    android:background="@android:color/white"
                    android:text="信息流广告（可点击）"
                    android:textSize="17sp"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textAllCaps="false" />

                <ImageView
                    android:id="@+id/ksad_main_left_back_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/ksad_back_black_icon"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="16sp"
            android:padding="16dp"
            android:background="@drawable/ksad_main_item_bg"
            android:clickable="true"
            android:onClick="testConfigFeedList"
            android:text="信息流(自定义模板+ListView)"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/ksad_main_list_divider_bg" />

        <TextView
            android:background="@drawable/ksad_main_item_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="16sp"
            android:padding="16dp"
            android:clickable="true"
            android:onClick="testConfigFeedRecycler"
            android:text="信息流(自定义模板+RecyclerView)"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8f8"/>
        <Switch
          android:id="@+id/show_width_switch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#f8f8f8"
          android:padding="16dp"
          android:switchPadding="16dp"
          android:text="是否动态宽度适配"
          android:textSize="16sp" />

        <Switch
          android:id="@+id/change_background_color_switch"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#f8f8f8"
          android:padding="16dp"
          android:switchPadding="16dp"
          android:text="是否切换背景颜色"
          android:textSize="16sp" />

    </LinearLayout>

</ScrollView>