<?xml version="1.0" encoding="utf-8"?>
<!--媒体自定义合规弹窗 -->
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="20dp"
        android:background="@drawable/ksad_main_item_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/ksad_test_app_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@android:color/white"
                    android:text="快手极速版"
                    android:textSize="17sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/ksad_test_app_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="北京达佳互联信息技术有限公司 · 版本1.1.0 大小 33.6M" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ksad_test_left_back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center_vertical|left"
                android:src="@drawable/ksad_back_black_icon" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e0e0e0" />

        <TextView
            android:id="@+id/ksad_test_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="16sp"
            android:paddingLeft="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="16dp"
            android:background="@drawable/ksad_main_item_bg"
            android:clickable="true"
            android:text="隐私政策"
            android:drawableRight="@drawable/ksad_main_list_arrow"
            android:textAllCaps="false" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@drawable/ksad_main_list_divider_bg" />

        <TextView
            android:id="@+id/ksad_test_app_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="16sp"
            android:paddingLeft="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:background="@drawable/ksad_main_item_bg"
            android:text="应用权限"
            android:textAllCaps="false" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/ksad_main_item_bg">

            <TextView
                android:id="@+id/ksad_test_permission"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:lineSpacingExtra="12dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:text="1.修改系统设置 \n  2.读取储存卡中的内容 \n 3.显示在其他应用上面 \n 4.修改或删除储存卡中的内容修改或删除储存卡中的内容修改或删除储存卡中的内容 \n 5.访问大致位置信息" />
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#f8f8f8" />

        <TextView
            android:id="@+id/ksad_test_download"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:text="点击下载"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@drawable/native_dialog_btn" />
    </LinearLayout>
</FrameLayout>