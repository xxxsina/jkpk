<?xml version="1.0" encoding="utf-8"?>
<RadioGroup android:id="@+id/screen_orientation_group"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/ksad_main_item_bg"
  android:checkedButton="@+id/radio_btn_portrait"
  android:paddingLeft="16dp"
  android:paddingRight="16dp"
  android:orientation="horizontal">

  <RadioButton
    android:id="@+id/radio_btn_portrait"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/screen_orientation_btn_bg"
    android:button="@null"
    android:gravity="center"
    android:padding="16dp"
    android:text="竖屏"
    android:textColor="#222222"
    android:textSize="16sp" />

  <RadioButton
    android:id="@+id/radio_btn_landscape"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/screen_orientation_btn_bg"
    android:button="@null"
    android:gravity="center"
    android:padding="16dp"
    android:text="横屏"
    android:textColor="#222222"
    android:textSize="16sp" />
</RadioGroup>
