<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="128dp"
  android:layout_height="128dp"
  android:layout_gravity="center">

  <View
    android:id="@+id/ksad_feed_shake_bg"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:visibility="invisible"
    android:background="@drawable/ksad_feed_shake_bg" />

  <ImageView
    android:id="@+id/ksad_feed_shake_icon"
    android:layout_width="55.56dp"
    android:layout_height="55.56dp"
    android:layout_gravity="center"
    android:visibility="invisible"
    android:src="@drawable/ksad_ic_shake_hand"/>
</FrameLayout>