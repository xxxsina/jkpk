<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ksad_reward_order_end_card_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.kwad.sdk.widget.KSFrameLayout
    android:id="@+id/ksad_reward_order_end_card"
    android:layout_width="@dimen/ksad_reward_order_end_dialog_width"
    android:layout_height="@dimen/ksad_reward_order_end_dialog_height"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/ksad_reward_task_dialog_bg">

    <!--  电商类广告的结束页弹窗 -->

    <ImageView
      android:id="@+id/ksad_reward_order_end_btn_close"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_margin="4dp"
      android:src="@drawable/ksad_reward_card_close" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="18dp"
      android:layout_marginRight="18dp"
      android:layout_marginTop="36dp"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ksad_reward_order_dialog_icon_size"
        android:layout_gravity="center_horizontal|top"
        android:orientation="horizontal">

        <com.kwad.components.core.widget.KSCornerImageView
          android:id="@+id/ksad_reward_order_end_icon"
          android:layout_width="@dimen/ksad_reward_order_dialog_icon_size"
          android:layout_height="@dimen/ksad_reward_order_dialog_icon_size"
          android:layout_gravity="top|center_horizontal"
          android:layout_marginRight="8dp"
          app:ksad_radius="4dp"
          tools:src="@drawable/ksad_default_app_icon" />

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <TextView
            android:id="@+id/ksad_reward_order_end_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:lineSpacingMultiplier="0.8"
            android:maxLines="2"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            tools:text="理肤泉自用感受 本人油皮痘痘肌，一直认为油皮再涂护肤品岂不是更油理念水乳…" />


          <com.kwad.components.ad.widget.KsPriceView
            android:id="@+id/ksad_reward_order_end_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/ksad_reward_main_color"
            android:textSize="8sp" />
        </RelativeLayout>
      </LinearLayout>

      <TextView
        android:id="@+id/ksad_reward_order_end_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="#FF666666"
        android:textSize="12sp"
        tools:text="理肤泉自用感受 本人油皮痘痘肌，一直认为油皮再涂护肤品岂不是更油理念水乳…" />
    </LinearLayout>


    <com.kwad.components.core.widget.KsStyledTextButton
      android:id="@+id/ksad_reward_order_end_btn_buy"
      android:layout_width="162dp"
      android:layout_height="46dp"
      android:layout_gravity="center_horizontal|bottom"
      android:layout_marginBottom="30dp"
      android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
      android:gravity="center"
      android:text="立即抢购"
      android:textColor="@android:color/white"
      android:textSize="15sp" />

  </com.kwad.sdk.widget.KSFrameLayout>
</RelativeLayout>
