<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ksad_shake_center_root"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_gravity="center_horizontal"
  android:clickable="true"
  android:focusable="true"
  android:focusableInTouchMode="true"
  android:orientation="vertical">

  <!-- 全屏位于中间状态的摇一摇图标 -->

  <!-- 中间状态的View -->
  <FrameLayout
    android:id="@+id/ksad_shake_center_circle_area"
    android:layout_width="@dimen/ksad_reward_shake_center_icon_size"
    android:layout_height="@dimen/ksad_reward_shake_center_icon_size"
    android:layout_gravity="center">

    <ImageView
      android:id="@+id/ksad_shake_center_circle_area_bg"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:background="@drawable/ksad_shake_center_bg" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/ksad_shake_center_icon"
        android:layout_width="@dimen/ksad_reward_shake_center_hand_size"
        android:layout_height="@dimen/ksad_reward_shake_center_hand_size"
        android:layout_gravity="center"
        android:src="@drawable/ksad_ic_shake_hand" />

      <TextView
        android:id="@+id/ksad_shake_center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        tools:text="摇一摇" />
    </LinearLayout>
  </FrameLayout>

  <TextView
    android:id="@+id/ksad_shake_center_sub_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingTop="6dp"
    android:textColor="@android:color/white"
    android:textSize="12sp"
    tools:text="点击完成下载点击完成下载点击完成下载"
    tools:textColor="#000000" />
</LinearLayout>