<?xml version="1.0" encoding="utf-8"?>
<com.kwad.sdk.widget.KSRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/ksad_live_end_page_layout_root"
  android:layout_width="match_parent"
  android:visibility="visible"
  android:clickable="true"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/ksad_live_end_page_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19191E"
    android:scaleType="fitXY" />

  <View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ksad_black_alpha50" />

  <ImageView
    android:id="@+id/ksad_live_end_page_author_icon"
    android:layout_width="88dp"
    android:layout_height="88dp"
    android:layout_below="@+id/ksad_live_end_page_close_btn"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="72dp"
    android:scaleType="fitCenter"
    android:src="@drawable/ksad_ic_default_user_avatar" />

  <TextView
    android:id="@+id/ksad_author_name_txt"
    android:layout_width="wrap_content"
    android:layout_height="20dp"
    android:layout_below="@+id/ksad_live_end_page_author_icon"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:text="test"
    android:textColor="@android:color/white"
    android:ellipsize="end"
    android:singleLine="true"
    android:textSize="16sp"
    android:textStyle="normal" />

  <TextView
    android:id="@+id/ksad_live_end_txt"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_below="@+id/ksad_author_name_txt"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="36dp"
    android:gravity="center"
    android:text="直播结束"
    android:textColor="@android:color/white"
    android:textSize="25sp"
    android:textStyle="normal" />

  <View
    android:id="@+id/ksad_live_end_bottom_divider"
    android:layout_width="300dp"
    android:layout_height="1px"
    android:layout_marginTop="8.5dp"
    android:layout_below="@+id/ksad_live_end_detail_layout"
    android:layout_centerHorizontal="true"
    android:background="#1AFFFFFF" />

  <RelativeLayout
    android:id="@+id/ksad_live_end_detail_layout"
    android:layout_width="300dp"
    android:layout_height="86dp"
    android:layout_below="@+id/ksad_live_end_top_divider"
    android:layout_centerHorizontal="true">

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginLeft="6dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/ksad_live_end_detail_watch_person_count"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text=" "
        android:textSize="18sp"
        android:textStyle="bold" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="观看人数"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="vertical">

      <TextView
        android:id="@+id/ksad_live_end_detail_like_person_count"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text=" "
        android:textSize="18sp"
        android:textStyle="bold" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="得到喜欢"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:layout_marginRight="6dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/ksad_live_end_detail_watch_time"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text=" "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="直播时长"
        android:textColor="#B3FFFFFF"
        android:textSize="12sp" />
    </LinearLayout>
  </RelativeLayout>

  <View
    android:id="@+id/ksad_live_end_top_divider"
    android:layout_width="300dp"
    android:layout_height="1px"
    android:layout_below="@+id/ksad_live_end_txt"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:background="#1AFFFFFF" />

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_alignParentBottom="true"
    android:layout_marginHorizontal="33dp"
    android:layout_marginBottom="22dp"
    android:background="@drawable/ksad_reward_live_end_bottom_bg"
    android:gravity="center">

    <TextView
      android:id="@+id/ksad_live_end_bottom_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="内容很精彩，不要错过哦"
      android:layout_centerHorizontal="true"
      android:textColor="#ffffff"
      android:gravity="center"
      android:textSize="18sp"
      android:textStyle="bold"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="24dp"
      android:layout_centerHorizontal="true"
      android:gravity="center_horizontal"
      android:layout_below="@+id/ksad_live_end_bottom_title">

      <TextView
        android:id="@+id/ksad_live_end_bottom_des_btn"
        android:layout_width="wrap_content"
        android:text="查看详情"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:textColor="#ffffff"
        android:background="@drawable/ksad_reward_live_end_bottom_des_btn_bg"
        android:layout_height="36dp"/>

      <TextView
        android:id="@+id/ksad_live_end_bottom_action_btn"
        android:layout_width="wrap_content"
        android:text="更多直播"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:background="@drawable/ksad_reward_live_end_bottom_action_btn_bg"
        android:layout_marginLeft="12dp"
        android:textColor="#ffffff"
        android:layout_height="36dp"/>
    </LinearLayout>
  </RelativeLayout>
</com.kwad.sdk.widget.KSRelativeLayout>
