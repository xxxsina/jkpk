<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/ksad_app_icon"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="@drawable/ksad_video_app_20_bg"
    android:src="@drawable/ksad_default_app_icon" />

  <TextView
    android:id="@+id/ksad_app_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:gravity="center"
    android:maxLines="1"
    android:paddingLeft="56dp"
    android:paddingRight="56dp"
    android:textColor="#222222"
    android:textSize="26dp"
    tools:text="快手APP" />

  <com.kwad.components.ad.widget.AppScoreView
    android:id="@+id/ksad_app_score"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:visibility="gone"
    tools:visibility="visible" />

  <com.kwad.components.ad.widget.KsAppTagsView
    android:id="@+id/ksad_reward_apk_info_tags"
    android:layout_width="match_parent"
    android:layout_height="18dp"
    android:layout_below="@+id/ksad_app_score"
    android:layout_marginTop="10dp"
    android:divider="@drawable/ksad_reward_apk_tags_divider"
    android:gravity="center"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:visibility="gone" />

  <TextView
    android:id="@+id/ksad_app_download_count"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:ellipsize="end"
    android:gravity="center"
    android:maxLines="1"
    android:textColor="#666666"
    android:textSize="16dp"
    android:visibility="gone"
    tools:text="800w下载次数"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/ksad_app_introduce"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:ellipsize="end"
    android:gravity="center"
    android:maxLines="2"
    android:paddingLeft="56dp"
    android:paddingRight="56dp"
    android:textColor="#666666"
    android:textSize="16dp"
    tools:text="同事告诉我这里买水果很便宜同事告诉我这里买水果很便宜同事告诉我这里买水果很便宜" />

  <com.kwad.components.core.page.widget.TextProgressBar
    android:id="@+id/ksad_download_bar"
    android:layout_width="263dp"
    android:layout_height="44dp"
    android:layout_marginTop="48dp"
    android:clickable="true"
    android:focusable="true"
    android:indeterminateOnly="false"
    android:progressDrawable="@drawable/ksad_video_actionbar_app_progress" />

  <FrameLayout
    android:id="@+id/ksad_reward_apk_info_install_container"
    android:layout_width="263dp"
    android:layout_height="44dp"
    android:layout_marginTop="25dp"
    android:background="@drawable/ksad_reward_install_btn_bg"
    android:clickable="false"
    android:visibility="gone"
    tools:visibility="visible">

    <Button
      android:id="@+id/ksad_reward_apk_info_install_start"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:background="@android:color/transparent"
      android:clickable="false"
      android:textColor="@android:color/white"
      android:textSize="16sp"
      tools:text="开始下载" />


    <!-- 行动号召按钮，默认不显示 -->
    <Button
      android:id="@+id/ksad_reward_apk_info_install_action"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_gravity="center"
      android:background="@android:color/transparent"
      android:clickable="false"
      android:textColor="@android:color/white"
      android:textSize="16sp"
      tools:text="安装并体验n秒  可领取奖励" />
  </FrameLayout>

</LinearLayout>
