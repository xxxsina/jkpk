<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="360dp"
    android:height="120dp"
    android:viewportWidth="360"
    android:viewportHeight="120">
    
    <!-- 渐变背景 -->
    <path
        android:pathData="M0,0 L360,0 L360,120 L0,120 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:type="linear"
                android:startX="0"
                android:startY="0"
                android:endX="360"
                android:endY="120"
                android:startColor="#6366F1"
                android:endColor="#8B5CF6" />
        </aapt:attr>
    </path>
    
    <!-- 装饰性圆形元素 -->
    <path
        android:pathData="M300,10 A20,20 0 1,1 300,50 A20,20 0 1,1 300,10 Z"
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.1" />
    
    <path
        android:pathData="M320,65 A15,15 0 1,1 320,95 A15,15 0 1,1 320,65 Z"
        android:fillColor="#FFFFFF"
        android:fillAlpha="0.15" />
    
    <!-- 装饰性波浪线 -->
    <path
        android:pathData="M250,60 Q270,45 290,60 T330,60"
        android:strokeColor="#FFFFFF"
        android:strokeWidth="2"
        android:strokeAlpha="0.2"
        android:fillColor="@android:color/transparent" />
        
</vector>