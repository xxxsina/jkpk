<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/ksad_reward_origin_live_root"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:background="@drawable/ksad_reward_origrin_live_actionbar_bg"
  android:layout_height="88dp">

  <com.kwad.components.core.widget.KsLogoView
    android:id="@+id/ksad_reward_live_kwai_logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_alignParentRight="true"/>

  <TextView
    android:id="@+id/ksad_live_actionbar_btn"
    android:layout_width="wrap_content"
    android:text="进入直播间"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_marginRight="12dp"
    android:paddingHorizontal="16dp"
    android:gravity="center"
    android:textColor="#ffffff"
    android:textSize="14sp"
    android:layout_height="36dp"
    android:background="@drawable/ksad_reward_origrin_live_button_bg" />

  <LinearLayout
    android:layout_toLeftOf="@+id/ksad_live_actionbar_btn"
    android:gravity="center_vertical"
    android:layout_centerVertical="true"
    android:layout_marginRight="8dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.kwad.components.ad.reward.widget.KsAuthorIconView
      android:id="@+id/ksad_live_author_icon"
      android:layout_width="@dimen/ksad_reward_author_width"
      android:layout_marginHorizontal="5dp"
      android:layout_height="wrap_content"/>

    <LinearLayout
      android:layout_toRightOf="@+id/ksad_live_author_icon"
      android:layout_alignBottom="@+id/ksad_live_author_icon"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/kwad_actionbar_title"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:gravity="center|left"
        android:textSize="16sp"
        android:shadowColor="#4d000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:layout_height="wrap_content"
        android:textColor="#222222"
        />

      <TextView
        android:id="@+id/kwad_actionbar_des_text"
        android:layout_width="wrap_content"
        android:maxLines="2"
        android:gravity="center|left"
        android:textSize="14sp"
        android:shadowDx="1"
        android:shadowDy="1"
        android:layout_marginTop="4dp"
        android:shadowRadius="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:textColor="#666666" />
    </LinearLayout>

  </LinearLayout>


</RelativeLayout>