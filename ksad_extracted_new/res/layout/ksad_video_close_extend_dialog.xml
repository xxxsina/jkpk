<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:background="#99000000">

  <!--  激励视频 新增挽留弹窗样式 rewardContentDetainType = 1 -->

  <FrameLayout
    android:layout_width="271dp"
    android:layout_height="260dp"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="271dp"
      android:layout_height="213dp"
      android:layout_gravity="bottom"
      android:orientation="vertical">

      <com.kwad.sdk.widget.KSFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ksad_reward_task_dialog_bg">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:layout_marginBottom="24dp"
          android:orientation="vertical">

          <TextView
            android:id="@+id/ksad_reward_close_extend_dialog_play_time_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:textColor="#222222"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="再看13秒，可获得奖励" />

          <com.kwad.components.core.widget.KsStyledTextButton
            android:id="@+id/ksad_reward_close_extend_dialog_btn_continue"
            android:layout_width="207dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ksad_ksad_reward_follow_btn_follow_bg"
            android:gravity="center"
            android:text="留下看看"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

          <TextView
            android:id="@+id/ksad_reward_close_extend_dialog_btn_deny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="残忍离开"
            android:textColor="#FF9C9C9C"
            android:textSize="12sp" />

        </LinearLayout>

      </com.kwad.sdk.widget.KSFrameLayout>

    </LinearLayout>

    <ImageView
      android:id="@+id/ksad_reward_close_extend_dialog_gift"
      android:layout_width="127dp"
      android:layout_height="100dp"
      android:layout_gravity="center_horizontal"
      android:src="@drawable/ksad_reward_gift" />

  </FrameLayout>

</FrameLayout>