<?xml version="1.0" encoding="utf-8"?>
<com.kwad.sdk.widget.KSRelativeLayout android:id="@+id/ksad_live_end_page_layout_root_landscape"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clickable="true"
  android:visibility="visible">

  <ImageView
    android:id="@+id/ksad_live_end_page_bg_landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19191E"
    android:scaleType="fitXY" />

  <View
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ksad_black_alpha50" />

  <RelativeLayout
    android:layout_width="211dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="180dp"
    android:layout_below="@+id/ksad_live_end_page_close_btn">
    <ImageView
      android:id="@+id/ksad_live_end_page_author_icon_landscape"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="48dp"
      android:scaleType="fitCenter"
      android:src="@drawable/ksad_ic_default_user_avatar" />
    <TextView
      android:id="@+id/ksad_author_name_txt_landscape"
      android:layout_width="wrap_content"
      android:layout_height="20dp"
      android:layout_below="@+id/ksad_live_end_page_author_icon_landscape"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="8dp"
      android:ellipsize="end"
      android:gravity="center"
      android:singleLine="true"
      android:text="test"
      android:textColor="@android:color/white"
      android:textSize="16sp"
      android:textStyle="normal" />

    <TextView
      android:id="@+id/ksad_live_end_txt_landscape"
      android:layout_width="wrap_content"
      android:layout_height="35dp"
      android:layout_below="@+id/ksad_author_name_txt_landscape"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="8dp"
      android:gravity="center"
      android:text="直播结束"
      android:textColor="@android:color/white"
      android:textSize="25sp"
      android:textStyle="normal" />
    <View
      android:id="@+id/ksad_live_end_bottom_divider_landscape"
      android:layout_width="162dp"
      android:layout_height="1px"
      android:layout_below="@+id/ksad_live_end_detail_layout_landscape"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="8.5dp"
      android:background="#1AFFFFFF" />
    <RelativeLayout
      android:id="@+id/ksad_live_end_detail_layout_landscape"
      android:layout_width="211dp"
      android:layout_height="60dp"
      android:layout_below="@+id/ksad_live_end_top_divider_landscape"
      android:layout_centerHorizontal="true">

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:orientation="vertical">

        <TextView
          android:id="@+id/ksad_live_end_detail_watch_person_count_landscape"
          android:layout_width="wrap_content"
          android:layout_height="22dp"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="4232"
          android:textColor="@android:color/white"
          android:textSize="18sp"
          android:textStyle="bold" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="15dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="8dp"
          android:gravity="center"
          android:text="观看人数"
          android:textColor="#B3FFFFFF"
          android:textSize="12sp" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
          android:id="@+id/ksad_live_end_detail_like_person_count_landscape"
          android:layout_width="wrap_content"
          android:layout_height="22dp"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="1666"
          android:textColor="@android:color/white"
          android:textSize="18sp"
          android:textStyle="bold" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="15dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="8dp"
          android:gravity="center"
          android:text="得到喜欢"
          android:textColor="#B3FFFFFF"
          android:textSize="12sp" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:orientation="vertical">

        <TextView
          android:id="@+id/ksad_live_end_detail_watch_time_landscape"
          android:layout_width="wrap_content"
          android:layout_height="22dp"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="9:05:50"
          android:textColor="@android:color/white"
          android:textSize="18sp"
          android:textStyle="bold" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="15dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="8dp"
          android:gravity="center"
          android:text="直播时长"
          android:textColor="#B3FFFFFF"
          android:textSize="12sp" />
      </LinearLayout>
    </RelativeLayout>

    <View
      android:id="@+id/ksad_live_end_top_divider_landscape"
      android:layout_width="161dp"
      android:layout_height="1px"
      android:layout_below="@+id/ksad_live_end_txt_landscape"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="16dp"
      android:background="#1AFFFFFF" />

  </RelativeLayout>




  <RelativeLayout
    android:layout_width="280dp"
    android:layout_height="135dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="19dp"
    android:layout_marginHorizontal="25dp"
    android:layout_alignParentRight="true"
    android:background="@drawable/ksad_reward_live_end_bottom_bg"
    android:gravity="center">

    <TextView
      android:id="@+id/ksad_live_end_bottom_title_landscape"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:text="内容很精彩，不要错过哦"
      android:textColor="#ffffff"
      android:textSize="18sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/ksad_live_end_bottom_title_landscape"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="24dp"
      android:gravity="center_horizontal"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/ksad_live_end_bottom_des_btn_landscape"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@drawable/ksad_reward_live_end_bottom_des_btn_bg"
        android:gravity="center"
        android:paddingHorizontal="27dp"
        android:text="查看详情"
        android:textColor="#ffffff"
        android:textSize="14sp" />

      <TextView
        android:id="@+id/ksad_live_end_bottom_action_btn_landscape"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/ksad_reward_live_end_bottom_action_btn_bg"
        android:gravity="center"
        android:paddingHorizontal="27dp"
        android:text="更多直播"
        android:textColor="#ffffff"
        android:textSize="14sp" />
    </LinearLayout>
  </RelativeLayout>
</com.kwad.sdk.widget.KSRelativeLayout>
