<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  tools:parentTag="android.widget.LinearLayout">

  <!-- 该布局会被添加到CloseCountView中 -->
  <TextView
    android:id="@+id/ksad_ad_endcard_second"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#C8FFFFFF"
    android:textSize="12sp"
    tools:text="5s"
    android:visibility="gone"
    tools:visibility="visible" />

  <TextView
    android:id="@+id/ksad_ad_endcard_line"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="4dp"
    android:text="|"
    android:textColor="#C8FFFFFF"
    android:textSize="12sp"
    android:visibility="gone"
    tools:visibility="visible" />

  <ImageView
    android:id="@+id/ksad_splash_endcard_close_img"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:src="@drawable/ksad_splash_endcard_close" />

</merge>