<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:background="@drawable/ksad_video_closedialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ksad_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ff000000"
            android:textSize="17dp"
            android:textStyle="bold"
            tools:ignore="SpUsage"
            tools:text="观看视频30s即可获取奖励" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EAEAEA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ksad_close_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="关闭广告"
                android:textColor="#666666"
                android:textSize="17dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#EAEAEA" />

            <TextView
                android:id="@+id/ksad_continue_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="继续观看"
                android:textColor="@color/ksad_reward_main_color"
                android:textSize="17dp"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>